{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug xcp_client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=xcp_client",
                    "--package=xcp_client"
                ],
                "filter": {
                    "name": "xcp_client",
                    "kind": "bin"
                }
            },
            "args": [
                "--log-level=3"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMap": {
                "/rustc/*": "${env:HOME}/.rustup/toolchains/stable-aarch64-apple-darwin/lib/rustlib/src/rust/*"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug xcp_client (no args)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=xcp_client",
                    "--package=xcp_client"
                ],
                "filter": {
                    "name": "xcp_client",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceMap": {
                "/rustc/*": "${env:HOME}/.rustup/toolchains/stable-aarch64-apple-darwin/lib/rustlib/src/rust/*"
            }
        }
    ]
}